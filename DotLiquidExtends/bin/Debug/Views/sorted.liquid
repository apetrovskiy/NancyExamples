
<html>
    <head>
        <title>sorted products</title>
    </head>
    <body>
        <table>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
            </tr>
            <!-- {% assign sortedProducts = @Model.Products | sort ('Name', 'Price') %} -->
            <!-- {% assign sortedProducts = @Model.Products | sort:'Price' %} -->
            {% assign sortedProducts = @Model.Products | sort:'Name' %}
            {% for product in sortedProducts %}
            <tr>
                <td>{{ product.Name }}</td>
                <td>{{ product.Price }}</td>
                <td>{{ product.Description }}</td>
            </tr>
            {% endfor %}
        </table>
    </body>
</html>
